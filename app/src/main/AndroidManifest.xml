<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mohamed.calma">

    <application
        android:allowBackup="true"
        android:icon="@drawable/navicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NOActionBar">
        <activity android:name=".Activites.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activites.LoginActivity" />
        <activity android:name=".Activites.RegisterActivity" />
        <activity
            android:name=".Activites.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/NOActionBar" />
        <activity
            android:name=".Activites.TestActivity"
            android:parentActivityName=".Activites.ProfileActivity"
            android:theme="@style/Test" />
        <activity
            android:name=".Activites.ResultTestActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".Activites.ProfileActivity"
            android:theme="@style/Test" />
        <activity
            android:name=".Activites.EditActivity"
            android:label="Edit Profile"
            android:parentActivityName=".Activites.ProfileActivity"
            android:theme="@style/Test" />
        <activity
            android:name=".Activites.AddPostActivity"
            android:label="Add Post"
            android:parentActivityName=".Activites.ProfileActivity"
            android:theme="@style/Test" />
        <activity
            android:name=".Activites.ShowAllPostsActivity"
            android:label="All Posts"
            android:parentActivityName=".Activites.ProfileActivity"
            android:theme="@style/Test" />
        <activity android:name=".Activites.PostActivity"></activity>
    </application>

</manifest>